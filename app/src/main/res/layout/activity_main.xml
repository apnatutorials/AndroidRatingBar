<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.apnatutorials.androidratingbar.MainActivity">

    <RatingBar
        android:id="@+id/rbDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5" />

    <RatingBar
        android:id="@+id/rbDefaultRatingIndicator"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbDefault"
        android:layout_marginBottom="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.05" />

    <TextView
        android:id="@+id/tvDefaultRatingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbDefault"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/rbDefaultRatingIndicator" />


    <RatingBar
        android:id="@+id/rbCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbDefaultRatingIndicator"
        android:numStars="5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar" />

    <RatingBar
        android:id="@+id/rbCustomRatingIndicator"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rbCustom"
        android:layout_marginBottom="20dp"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.05" />

    <TextView
        android:id="@+id/tvCustomRatingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbCustom"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/rbCustomRatingIndicator" />

</RelativeLayout>
